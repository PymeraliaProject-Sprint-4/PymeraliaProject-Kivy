<PhotoScreen>:
    BoxLayout:
        orientation: 'vertical'
        Camera:
            id: camera_obj
            play: False
            size_hint: 1, 1
            allow_stretch: True
            keep_ratio: True
        Button:
            text: 'Take Photo'
            size_hint: (.5, .2)
            pos_hint: {'x': .25, 'y': .75}
            on_press: root.onCameraClick()
